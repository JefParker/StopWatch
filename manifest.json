{
  "manifest_version": 2,
  "name": "StopWatch",
  "short_name": "StopWatch",
  "version": "0.0.0.6",
  "minimum_chrome_version": "23",
  "description": "StopWatch - and other handy tools",
  "offline_enabled": true,
  "permissions": [
    "unlimitedStorage",
    "fileSystem",
    "alwaysOnTopWindows",
    "identity"
  ],
  "icons": {
    "16": "/assets/StopWatch16.png",
    "128": "/assets/StopWatch128.png"
  },
  "app": {
    "background": {
      "scripts": [
        "background.js"
      ]
    }
  },
  "sandbox": {
    "pages": [
      "index.html"
    ]
  }
}